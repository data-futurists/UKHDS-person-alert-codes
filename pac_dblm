Table PersonAlertCodes {
  AlertCodeID uuid [pk]
  AlertCode varchar
  AlertSubcode varchar [unique]
  AlertName varchar
  AlertSubName varchar
  AlertCategory varchar
  IsCritical boolean
  IsAwaabRelevant boolean
  RepairsImpact varchar
  SupportRequired text

  Note: "Lookup table of person alert codes and subcodes, including risk, health, and support metadata"
}

Table PersonAlert {
  PersonAlertID uuid [pk]
  PersonID uuid
  AlertCodeID uuid [ref: > PersonAlertCodes.AlertCodeID]
  AlertDescription text
  AlertSource varchar
  InformedResident boolean
  StartDate date
  EndDate date
  ReviewDate date
  Active boolean
  CreatedBy varchar
  LastUpdated timestamp

  Note: "Links alerts to individuals with start/end dates, context, and audit fields"
}
